<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns:gmaps="openui5.googlemaps" controllerName="htf.marsap.controller.Map">
	<App id="app">
		<pages>
			<Page>
				<Panel>
					<gmaps:Map height="450px" width="100%" zoom="15.5" lat="51.168827" lng="4.432924">
						<gmaps:markers>
							<gmaps:Marker lat="51.168827" lng="4.432924" info="Fort 5"/>
						</gmaps:markers>
					</gmaps:Map>
					<List headerText="sensors">
						<DisplayListItem label="Name" value="sensor 1" press="showDetail" type="Navigation"/>
						<DisplayListItem label="Name" value="sensor 2" press="showDetail" type="Navigation"/>
						<DisplayListItem label="Name" value="sensor 3" press="showDetail" type="Navigation"/>
						<DisplayListItem label="Name" value="sensor 4" press="showDetail" type="Navigation"/>
					</List>
				</Panel>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="beheer drones" press="showDrone"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>